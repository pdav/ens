%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Configuration de beamer
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\usetheme {default}
\usefonttheme {structurebold}

\setbeamercolor {frametitle} {fg=red}
\setbeamertemplate {frametitle} {\insertframetitle \par}

\pgfdeclareimage [height=3mm, interpolate=true] {logo} {logo-uds}

\setbeamertemplate {footline} {%
    \vskip 1ex
	\hskip 1ex
	\makebox [.4\textwidth] [l] {\pgfuseimage {logo}}
	\hfill
	\insertframenumber %/\inserttotalframenumber
	\hfill
	\makebox [.4\textwidth] [r] {\textnormal {%
		% \copyright
		Pierre David,
		pda@unistra.fr}%
	    }
	\hspace* {1ex}
    \vskip 1ex
}

\setbeamertemplate {navigation symbols} {}

\setbeamercolor {block title} {fg=red!80, bg= blue!10}
\setbeamercolor {block body} {fg=black, bg= blue!5}

% pour les "recettes de cuisines" dans les "blocks". Repose sur
% le fichier casserole.pdf
\newsavebox {\Cbox}
\newcommand {\casseroler} [1] {\sbox {\Cbox} {#1} %
    \raisebox {-.1\ht\Cbox} {\includegraphics [height=1.6\ht\Cbox] {casserole}}
    \hspace* {.5\ht\Cbox}
    \usebox {\Cbox}
}

% Reduire l'espace inter-lignes dans les tables des matières
% https://tex.stackexchange.com/questions/51452/reduce-spacing-in-table-of-contents-beamer#51458
\patchcmd{\beamer@sectionintoc}{\vskip1.5em}{\vskip1.1em}{}{}

\iftoggle {multichap} {%%%%%%%%%%%%%%%%%%%% Multi-chapter
    \newcommand {\titreA} [1] {\section {#1}}
    \newcommand {\titreB} [1] {\subsection {#1}}
    \AtBeginSection [] % Do nothing for \section*
    {
	\begin {frame}<beamer>
	    \frametitle {Plan}
	    \tableofcontents [currentsection, hideallsubsections]
	\end {frame}
    }
    \AtBeginSubsection [] % Do nothing for \subsection*
    {
	\begin {frame}<beamer>
	    \frametitle {Plan}
	    \tableofcontents [sectionstyle=show/hide, subsectionstyle=show/shaded/hide]
	\end {frame}
    }
} {%%%%%%%%%%%%%%%%%%%% Single-chapter
    \newcommand {\titreA} [1] {}
    \newcommand {\titreB} [1] {\section {#1}}
    \AtBeginSection [] % Do nothing for \section*
    {
	\begin {frame}<beamer>
	    \frametitle {Plan}
	    \tableofcontents [currentsection]
	\end {frame}
    }
    \AtBeginSubsection [] % Do nothing for \subsection*
    {
	\begin {frame}<beamer>
	    \frametitle {Plan}
	    \tableofcontents [sectionstyle=show/hide, subsectionstyle=show/shaded/hide]
	\end {frame}
    }
}

\iftoggle {title} {%%%%%%%%%%%%%%%%%%%%%%%% Title
    \AtBeginDocument {
	\begin {frame} [plain]
	    \titlepage
	\end {frame}
	\section* {Plan}
	\begin {frame} {Plan}
	    \tableofcontents [hideallsubsections]
	\end {frame}
    }
} {}
